#version 330 core

// Interpolated values from the vertex shaders
in vec2 UV;
in vec3 inColor;

// Ouput data
out vec4 color;

uniform sampler2D texture_array[20];

void main(){
    vec4 tempColor = texture( texture_array[int(mod(inColor.x, 20))], UV).rgba;

    color.r = tempColor.r;
    color.g = tempColor.g;
    color.b = tempColor.b;
    color.a = 1.0;
}